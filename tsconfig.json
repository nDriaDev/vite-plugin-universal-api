{
	"include": [
		"src"
	],
	"compilerOptions": {
		"outDir": "dist",
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext",
		],
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"stripInternal": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"declaration": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"declarationMap": true,
		"baseUrl": ".",
		"typeRoots": [
			"node_modules/@types",
			"src/models"
		]
	}
}
